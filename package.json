{
  "name": "link-shortener",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "preversion": "echo test",
    "version": "git add .",
    "postversion": "git push --no-verify && git push --tags --no-verify && echo \"\n======Version Pushed Successfully=====\n\" ",
    "echo-version": "echo $npm_package_version",
    "lint": "./node_modules/eslint/bin/eslint.js .",
    "test": "npm run integration-tests",
    "integration-tests": "nyc --reporter=lcov --reporter=text-summary mocha --timeout 100000 --bail --exit --full-trace --async-only ./test/integration-tests/",
    "load-tests": "artillery run test/load-tests/basic.test.yml"
  },
  "dependencies": {
    "bluebird": "^3.7.1",
    "body-parser": "~1.17.1",
    "config": "^3.3.8",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "express": "~4.15.2",
    "jade": "~1.11.0",
    "lodash": "^4.17.15",
    "morgan": "~1.8.1",
    "redis": "^2.8.0",
    "serve-favicon": "~2.4.2",
    "uniqid": "^5.1.0"
  },
  "devDependencies": {
    "artillery": "^1.6.0-29",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.0.1",
    "husky": "^3.0.0",
    "mocha": "^5.1.1",
    "nyc": "^14.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run unit-tests",
      "pre-push": "npm test"
    }
  }
}
